@ViewBag.listaPais;
@ViewBag.listaDeportes;

<div class="agregarDeportista">
<h1> Agregar Deportista </h1>
<form action='@Url.Action("GuardarDeportista", "Home")' method="post">
    <p>Imagen:</p><input type="text" name="Foto" placeholder="ingrese un URL de internet..." /> <br/>
    <p>Nombre:</p> <input type="text" name="Nombre"/> <br/>
    <p>Apellido:</p> <input type="text" name="Apellido"/> <br/>
    <p>Fecha de Nacimiento:</p> <input type="date" name="FechaNacimiento"/> <br/>
    <p>Deporte:</p> 
    <select name="IdDeporte">
        @foreach(Deporte item in ViewBag.listaDeportes)
        {
            <option value="@item.IdDeporte">@item.Nombre</option>
        }
    </select> <br/>

    <p>Pais:</p>
    <select name="IdPais">
        @foreach(Pais item in ViewBag.listaPais)
        {
            <option value="@item.IdPais">@item.Nombre</option>
        }
    </select>

    <input type="submit" value="Enviar Datos">
</form>
</div>