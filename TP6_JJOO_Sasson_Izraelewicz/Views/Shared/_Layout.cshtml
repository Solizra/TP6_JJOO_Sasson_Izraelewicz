<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP6_JJOO_SASSON_IZRAELEWICZ</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" asp-append-version="true" />
  
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href='@Url.Action("Index", "Home")'><img src="~/img/Logo_JJOO.png"></a>
            <div class="navbar-nav">
                <a class="btn btn-sm btn-outline-secondary" href='@Url.Action("Historia", "Home")'>Historia</a> //CREAR IARESULT Y VIEW LLAMADA HISTORIA
                <a class="btn btn-sm btn-outline-secondary" href='@Url.Action("Deportes", "Home")'>Deportes</a>
                <a class="btn btn-sm btn-outline-secondary" href='@Url.Action("Paises", "Home")'>Paises</a>
                <a class="btn btn-sm btn-outline-secondary" href='@Url.Action("AgregarDeportista", "Home")'>Agregar Deportistas</a>
                <a class="btn btn-sm btn-outline-secondary" href='@Url.Action("Creditos", "Home")'>Créditos</a>
            </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - NombreProyecto
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
